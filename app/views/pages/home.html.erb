<div class="banner-hp" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://cdn.pixabay.com/photo/2023/10/18/22/48/ai-generated-8325216_1280.png);">
  <div class="container">
    <h1>Rejoignez le <strong>club</strong> de motocross<strong> NXR</strong> </h1>
    <div class= "mt-4">
      <%= link_to "Créer un compte", new_user_registration_path, class: "btn-nxr" %>
      <%= link_to "En savoir plus", new_user_session_path, class: "btn-nxr-orange" %>
    </div>
  </div>
</div>

<div class="container my-4">
  <h2 class="mb-4 text-center">Les événements à venir</h2>

  <div class="row">
    <% @races.each do |race| %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100 rounded-4">
          <% if race.image.attached? %>
            <%= image_tag race.image, class: "card-img-top", alt: race.name %>
          <% else %>
            <%= image_tag "logo_nxr.png", class: "card-img-top", alt: race.name %>
          <% end %>

          <div class="card-body">
            <h5 class="card-title"><%= race.name %></h5>
            <p class="card-text text-muted">
              <%= l(race.date, format: "%d %B %Y") %>
            </p>
            <%= link_to "Voir l'événement", public_race_path(race), class: "btn btn-nxr" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

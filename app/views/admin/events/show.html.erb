<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= banner_image_url(@event) %>')">
    <h1><%= @event.name %></h1>
    <%= registration_link(@event) %>
  </div>
</div>

<p><%= @event.description %></p>

<hr>
<h3>Inscriptions pour cet événement</h3>

<% if @event.registrations.empty? %>
  <p class="text-muted">Aucune inscription pour le moment.</p>
<% else %>
  <div>
    <% @event.registrations.each do |registration| %>
      <%= link_to [:admin, registration.registerable, registration] do %>
        <div>
          <i class="fas fa-user"></i>
          <span><%= registration.user.first_name %> <%= registration.user.last_name %></span>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
<hr>

<%= link_to admin_dashboard_path, class: "btn btn-primary", aria: { label: "Retour au tableau de bord"} do %>
  <i class="fas fa-home"></i>
<% end %>

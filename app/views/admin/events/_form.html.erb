<%= simple_form_for [:admin, @event], html: { multipart: true } do |f| %>
  <%= f.input :name, label: "Nom de l'événement" %>
  <%= f.input :description, label: "Description de l'événement" %>
  <%= f.input :date, label: "Date de l'événement" do %>
    <%= f.date_field :date, class: "form-control" %>
  <% end %>
  <%= f.input :hour, as: :time, label: "heure de l'événement" %>
  <%= f.input :image, as: :file, label: "Image de l'événement" %>
  <%= f.button :submit, "Valider", class: "btn btn-primary" %>
<% end %>

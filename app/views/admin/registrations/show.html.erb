
<%# --- BANNER --- %>
<% if @registerable.respond_to?(:image) && @registerable.image.attached? %>
  <!-- Cas : avec image -->
  <section class="banner-dashboard"
    style="background-image: linear-gradient(rgba(0,0,0,0.45), rgba(0,0,0,0.55)), url('<%= url_for(@registerable.image) %>');">
    <div class="container py-5 text-center">
      <h1 class="display-5 fw-bold mb-0"><%= @registerable.name %></h1>
      <% if @registerable.respond_to?(:date) && @registerable.date.present? %>
        <div class="fw-bold mt-2 text-on-surface">
          <i class="far fa-calendar-alt me-1"></i>
          <%= l(@registerable.date, format: "%d %B %Y") %>
        </div>
      <% end %>
    </div>
  </section>
<% else %>
  <!-- Cas : sans image -->
  <section class="banner-dashboard profile-user">
    <div class="container py-5 text-center">
      <h1 class="display-5 fw-bold mb-0"><%= @registerable.name %></h1>
      <% if @registerable.respond_to?(:date) && @registerable.date.present? %>
        <div class="fw-bold mt-2 text-on-surface">
          <i class="far fa-calendar-alt me-1"></i>
          <%= l(@registerable.date, format: "%d %B %Y") %>
        </div>
      <% end %>
    </div>
  </section>
<% end %>
<section class="container my-5">
  <!-- Barre d’actions -->
  <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3 mb-4">
    <h2 class="section-title mb-0">
      <i class="fas fa-user-check me-2"></i>Détail de l’inscription
    </h2>

    <div class="d-flex flex-wrap gap-2">
      <%= link_to admin_user_path(@registration.user), class: "btn-nxr d-inline-flex align-items-center" do %>
        <i class="fas fa-user me-2"></i> Voir la fiche membre
      <% end %>

      <%= link_to polymorphic_path([:admin, @registration.registerable]), class: "btn-nxr-orange d-inline-flex align-items-center" do %>
        <i class="fas fa-clipboard-list me-2"></i> Voir la fiche
      <% end %>
    </div>
  </div>

  <div class="row g-4">
    <% user = @registration.user %>

    <!-- Colonne gauche : avatar + infos + statut & actions -->
    <div class="col-lg-4">
      <article class="card card-admin shadow-sm rounded-4 h-100 overflow-hidden mb-4">
        <div class="ratio ratio-4x3 bg-dark">
          <% if user.respond_to?(:avatar) && user.avatar.attached? %>
            <%= image_tag user.avatar, class: "card-img-top object-cover", alt: "#{user.first_name} #{user.last_name}" %>
          <% else %>
            <%= image_tag "avatar_default.jpg", class: "card-img-top object-contain p-3", alt: "#{user.first_name} #{user.last_name}" %>
          <% end %>
        </div>

        <div class="card-body d-flex flex-column">
          <h3 class="h6 fw-bold mb-1"><%= user.first_name %> <%= user.last_name %></h3>

          <p class="text-tertiary small mb-2">
            <i class="far fa-user me-1"></i>
            Membre depuis le <%= l(user.created_at.to_date, format: "%d %B %Y") %>
            <small class="text-tertiary">(<%= time_ago_in_words(user.created_at) %>)</small>
          </p>

          <p class="small mb-3">
            <i class="far fa-envelope me-1"></i> <%= mail_to user.email %><br>
            <% if user.phone_number.present? %>
              <i class="fas fa-phone me-1"></i> <%= user.phone_number %>
            <% end %>
          </p>

          <div class="border-top my-3"></div>
          <% status = @registration.status.to_s %>

          <% status_color = case status
            when "validated" then "badge-validated"
            when "rejected"  then "badge-rejected"
            else "badge-pending"
          end %>

          <% status_icon = case status
            when "validated" then "fa-check-circle"
            when "rejected"  then "fa-times-circle"
            else "fa-hourglass-half"
          end %>

          <div class="d-flex align-items-center justify-content-between mb-2">
            <span class="small text-tertiary d-inline-flex align-items-center">
              <i class="fas fa-traffic-light me-1"></i> Statut actuel
            </span>

            <span class="badge rounded-pill d-inline-flex align-items-center gap-1 <%= status_color %>"
              title="<%= status.humanize %>">
              <i class="fas <%= status_icon %>"></i>
              <%= status.humanize %>
            </span>
          </div>

          <% if current_user.admin? %>
            <div class="d-flex flex-wrap gap-2 mt-2">
              <% unless @registration.validated? %>
                <%= form_with url: admin_validate_admin_registration_path(@registration), method: :patch, class: "d-inline" do %>
                  <%= submit_tag "Valider", class: "btn btn-nxr btn-sm", data: { turbo_confirm: "Confirmer la validation ?" } %>
                <% end %>
              <% end %>

              <% unless @registration.rejected? %>
                <%= form_with url: admin_reject_admin_registration_path(@registration), method: :patch, class: "d-inline" do %>
                  <%= submit_tag "Refuser", class: "btn btn-rejected btn-sm", data: { turbo_confirm: "Confirmer le refus ?" } %>
                <% end %>
              <% end %>

              <% unless @registration.pending? %>
                <%= form_with url: admin_reset_admin_registration_path(@registration), method: :patch, class: "d-inline" do %>
                  <%= submit_tag "Remettre en attente", class: "btn btn-warning btn-sm", data: { turbo_confirm: "Remettre l'inscription en attente ?" } %>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
      </article>
    </div>

    <!-- Colonne droite : infos perso + inscription + véhicule -->
    <div class="col-lg-8">
      <!-- Informations personnelles -->
      <article class="card card-admin shadow-sm rounded-4 mb-4">
        <div class="card-body">
          <h3 class="h6 fw-bold mb-3">
            <i class="far fa-id-card me-2"></i>Informations personnelles
          </h3>
          <div class="row g-2 small">
            <div class="col-sm-6"><strong>Prénom :</strong> <%= user.first_name %></div>
            <div class="col-sm-6"><strong>Nom :</strong> <%= user.last_name %></div>
            <% if user.birth_date.present? %>
              <div class="col-sm-6"><strong>Date de naissance :</strong> <%= user.birth_date %></div>
            <% end %>
            <% if user.phone_number.present? %>
              <div class="col-sm-6"><strong>Téléphone :</strong> <%= user.phone_number %></div>
            <% end %>
            <div class="col-12"><strong>Email :</strong> <%= user.email %></div>
            <% if user.address.present? || user.post_code.present? || user.town.present? %>
              <div class="col-12">
                <strong>Adresse :</strong>
                <%= [user.address, user.post_code, user.town].compact_blank.join(" • ") %>
              </div>
            <% end %>
          </div>
        </div>
      </article>

      <!-- Informations sur l’inscription -->
      <article class="card card-admin shadow-sm rounded-4 mb-4">
        <div class="card-body">
          <h3 class="h6 fw-bold mb-3">
            <i class="fas fa-flag-checkered me-2"></i>Informations sur l’inscription
          </h3>
          <div class="row g-2 small">
            <div class="col-sm-6">
              <strong>Inscrit à :</strong>
              <%= @registration.registerable.try(:name) || @registration.registerable_type %>
            </div>
            <div class="col-sm-6">
              <strong>Le :</strong> <%= l(@registration.created_at, format: :short) %>
            </div>

            <%# Champs liés aux courses si présents %>
            <% if @registration.respond_to?(:race_number) && @registration.race_number.present? %>
              <div class="col-sm-6"><strong>Numéro de course :</strong> <%= @registration.race_number %></div>
            <% end %>
            <% if user.respond_to?(:license_code) && user.license_code.present? %>
              <div class="col-sm-6"><strong>Code licence :</strong> <%= user.license_code %></div>
            <% end %>
            <% if user.respond_to?(:license_number) && user.license_number.present? %>
              <div class="col-sm-6"><strong>Numéro licence :</strong> <%= user.license_number %></div>
            <% end %>
            <% if user.respond_to?(:club_name) && (user.club_name.present? || user.try(:club_affiliation_number).present?) %>
              <div class="col-12">
                <strong>Club :</strong> <%= [user.club_name, user.try(:club_affiliation_number)].compact_blank.join(" • ") %>
              </div>
            <% end %>
          </div>
        </div>
      </article>

      <!-- Informations véhicule (affiché seulement si champs présents) -->
      <% if @registration.respond_to?(:bike_brand) || @registration.respond_to?(:cylinder_capacity) || @registration.respond_to?(:stroke_type) %>
        <article class="card card-admin shadow-sm rounded-4">
          <div class="card-body">
            <h3 class="h6 fw-bold mb-3">
              <i class="fas fa-motorcycle me-2"></i>Informations véhicule
            </h3>
            <div class="row g-2 small">
              <% if @registration.respond_to?(:bike_brand) && @registration.bike_brand.present? %>
                <div class="col-sm-6"><strong>Marque moto :</strong> <%= @registration.bike_brand %></div>
              <% end %>
              <% if @registration.respond_to?(:cylinder_capacity) && @registration.cylinder_capacity.present? %>
                <div class="col-sm-6"><strong>Cylindrée :</strong> <%= @registration.cylinder_capacity %></div>
              <% end %>
              <% if @registration.respond_to?(:stroke_type) && @registration.stroke_type.present? %>
                <div class="col-sm-6"><strong>Type de moteur :</strong> <%= @registration.stroke_type %></div>
              <% end %>
            </div>
          </div>
        </article>
      <% end %>
    </div>
  </div>
</section>

<% if registerable.new_record? %>
  <!-- Cas 1 : nouvel enregistrement -->
  <section class="profile-user banner-dashboard">
    <div class="container py-5 text-center">
      <h1 class="display-5 fw-bold mb-0">
        Nouvelle création
      </h1>
    </div>
  </section>

<% elsif registerable.respond_to?(:image) && registerable.image.attached? %>
  <!-- Cas 2 : existant avec image -->
  <section class="banner-dashboard"
    style="background-image: linear-gradient(rgba(0,0,0,0.45), rgba(0,0,0,0.55)), url('<%= banner_image_url(registerable) %>');">
    <div class="container py-5 text-center">
      <h1 class="display-5 fw-bold mb-0"><%= registerable.name %></h1>
      <% if registerable.respond_to?(:date) && registerable.date.present? %>
          <div class="h6 fw-bold mt-2 text-on-surface">
            <i class="far fa-calendar-alt me-1"></i>
            <%= l(registerable.date, format: "%d %B %Y") %>
          </div>
        <% end %>
    </div>
  </section>

<% else %>
  <!-- Cas 3 : existant sans image -->
  <section class="profile-user banner-dashboard">
    <div class="container py-5 text-center">
      <h1 class="display-5 fw-bold mb-0"><%= registerable.name %></h1>
      <% if registerable.respond_to?(:date) && registerable.date.present? %>
          <div class="h6 fw-bold mt-2 text-on-surface">
            <i class="far fa-calendar-alt me-1"></i>
            <%= l(registerable.date, format: "%d %B %Y") %>
          </div>
        <% end %>
    </div>
  </section>
<% end %>




<div class="container d-flex justify-content-center align-items-start py-5">
  <div class="card-signup shadow p-4 p-md-5 rounded-4 w-100">
    <div class="d-flex justify-content-center mb-4">
      <h2 class="text-center">
        <strong>
          <%= registerable.new_record? ? "Formulaire de création" : "Formulaire de modification" %>
        </strong>
      </h2>
    </div>

    <%= simple_form_for [:admin, registerable], html: { multipart: true } do |f| %>
      <%= f.error_notification %>

      <!-- Infos -->
    <fieldset class="form-section my-4">
      <legend class="section-title">Informations</legend>
      <div class="row g-3">
        <div class="col-md-6"><%= f.input :name, label: "Nom" %></div>
        <div class="col-md-6"><%= f.input :hour, as: :time, label: "Heure" %></div>
        <div class="col-md-6">
          <%= f.input :date, label: "Date" do %>
            <%= f.date_field :date, class: "form-control" %>
          <% end %>
        </div>
        <div class="col-12"><%= f.input :description, label: "Description" %></div>
      </div>
      </legend>
      </fieldset>

      <!-- Tarifs -->
      <fieldset class="form-section my-4">
        <legend class="section-title">Tarifs</legend>
        <div class="row g-3">
          <div class="col-md-6">
            <%= f.input :club_member_price, label: "Prix adhérent (€)", input_html: { step: 0.01 } %>
          </div>
          <div class="col-md-6">
            <%= f.input :non_club_member_price, label: "Prix non adhérent (€)", input_html: { step: 0.01 } %>
          </div>
        </div>
      </fieldset>

      <!-- Image -->
      <fieldset class="form-section my-4">
        <legend class="section-title">Image</legend>
        <%= f.input :image, as: :file, label: "Image" %>
        <% if f.object.image.attached? && f.object.image.attachment&.persisted? %>
          <div class="mb-2">
            <p class="mb-1">Image actuelle :</p>
            <%= image_tag f.object.image, size: "150x100", class: "img-thumbnail mb-2" %><br>
            <div class="form-check">
              <%= f.check_box :remove_image, class: "form-check-input" %>
              <%= f.label :remove_image, "Supprimer l'image actuelle", class: "form-check-label" %>
            </div>
          </div>
        <% end %>
      </fieldset>

      <div class="d-grid mt-4">
        <%= f.button :submit, "Valider", class: "btn-nxr btn-lg" %>
      </div>
    <% end %>
  </div>
</div>

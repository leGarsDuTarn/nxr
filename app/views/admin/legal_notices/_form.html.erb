<div class="container d-flex justify-content-center align-items-start py-5">
  <div class="card-signup shadow p-4 p-md-5 rounded-4 w-100">
    <div class="d-flex justify-content-center mb-4">
      <h1 class="text-center">
        <strong><%= @legal_notice.new_record? ? "Création des mentions légales" : "Modifier les mentions légales" %></strong>
      </h1>
    </div>

    <%= simple_form_for [:admin, @legal_notice], url: @legal_notice.new_record? ? admin_legal_notice_path : admin_legal_notice_path do |f| %>
      <%= f.error_notification %>

      <!-- Infos principales -->
      <fieldset class="form-section mb-4">
        <legend class="section-title">
          <i class="fa-solid fa-circle-info me-2"></i>Informations
        </legend>
        <div class="row g-3">
          <div class="col-md-8">
            <%= f.input :title, label: "Titre", placeholder: "Mentions légales du MCNC" %>
          </div>
        </div>
      </fieldset>

      <!-- Image -->
      <fieldset class="form-section mb-4">
        <legend class="section-title">Illustration</legend>
        <%= f.input :image, as: :file, label: "Image des mentions légales" %>

        <% if f.object.respond_to?(:image) && f.object.image.attached? %>
          <div class="mb-2">
            <p class="mb-1">Image actuelle :</p>
            <%= image_tag url_for(f.object.image), size: "150x100", class: "img-thumbnail mb-2" %><br>
            <div class="form-check">
              <%= f.check_box :remove_image, class: "form-check-input" %>
              <%= f.label :remove_image, "Supprimer l'image actuelle", class: "form-check-label" %>
            </div>
          </div>
        <% end %>
      </fieldset>

      <!-- Contenu -->
      <fieldset class="form-section mb-4">
        <legend class="section-title">
          <i class="fa-solid fa-newspaper me-2"></i>Mentions légales (contenu)
        </legend>
        <%= f.text_area :body,
              rows: 12,
              class: "form-control",
              placeholder: "À compléter" %>
        <p class="small text-muted mt-2">
          Ce texte sera affiché sur la page liée aux mentions légales.
        </p>
      </fieldset>

      <div class="d-grid mt-4">
        <%= f.button :submit, "Valider", class: "btn-nxr btn-lg" %>
      </div>
    <% end %>
  </div>
</div>

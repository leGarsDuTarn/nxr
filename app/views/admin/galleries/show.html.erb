<%= render partial: "shared/gallery_show", locals: { gallery: @gallery, path: public_gallery_path(@gallery) } %>

<!-- Nettoyage de la sélection locale après une MAJ réussie -->
<script>
  document.addEventListener("turbo:load", function () {
    try { localStorage.removeItem("gallery:<%= @gallery.id %>:remove"); } catch (e) {}
  });
</script>

<!-- app/views/public/articles/index.html.erb -->

<section class="profile-user banner-dashboard">
  <div class="container py-5 text-start">
    <h1 class="display-5 fw-bold mb-0">Toutes les actualités</h1>
    <p class="lead">Découvrez toutes les dernières nouvelles du club</p>
  </div>
</section>

<section class="container my-5">
  <!-- Barre d’actions : titre + recherche -->
  <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3 mb-4">
    <h2 class="section-title mb-0">
      <i class="fa-regular fa-newspaper me-2"></i> Actualités
    </h2>

    <div class="d-flex flex-wrap gap-2 flex-grow-1 justify-content-md-end">
      <%= form_with url: public_articles_path, method: :get, local: true,
                    class: "search-pill d-flex align-items-center" do |f| %>
        <%= f.label :q, "Rechercher", class: "visually-hidden" %>
        <%= f.search_field :q, value: params[:q],
              class: "form-control form-control-sm border-0 flex-grow-1",
              placeholder: "Titre ou date" %>
        <%= hidden_field_tag :per, params[:per] if params[:per].present? %>
        <%= button_tag type:"submit",
              class: "btn-nxr rounded-pill d-flex align-items-center justify-content-center ms-2 px-3" do %>
          <i class="fa-solid fa-magnifying-glass"></i>
        <% end %>
        <% if params[:q].present? %>
          <%= link_to public_articles_path(per: params[:per]),
                class: "btn btn-sm btn-outline-danger rounded-pill d-flex align-items-center justify-content-center ms-2 px-3",
                title: "Effacer la recherche" do %>
            <i class="fas fa-times"></i>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>

  <% has_articles = @articles.present? %>

  <% if has_articles %>
    <div class="row g-4">
      <% @articles.each do |article| %>
        <div class="col-sm-6 col-lg-4 mx-auto">
          <article class="card card-admin shadow-sm rounded-4 h-100 overflow-hidden">
            <!-- Image -->
            <div class="ratio ratio-4x3 bg-dark">
              <% if article.image.attached? %>
                <%= image_tag article.image,
                              class: "card-img-top object-cover",
                              alt: article.title,
                              loading: "lazy" %>
              <% else %>
                <%= image_tag "default_article.jpeg",
                              class: "card-img-top object-contain p-3",
                              alt: article.title,
                              loading: "lazy" %>
              <% end %>
            </div>

            <!-- Body -->
            <div class="card-body d-flex flex-column">
              <h5 class="fw-bold mb-2">
                <%= link_to article.title,
                            public_article_path(article),
                            class: "stretched-link text-decoration-none text-color-primary" %>
              </h5>

              <p class="flex-grow-1 mb-2">
                <%= truncate(article.content, length: 100, separator: ' ') %>
              </p>

              <small class="text-tertiary d-block mb-2">
                <i class="far fa-calendar-alt me-1"></i>
                Publié le <%= l(article.created_at.to_date, format: "%d %B %Y") %>
              </small>

              <small class="text-tertiary d-block mb-2">
                <i class="fa-solid fa-pen-nib me-1"></i>
                Rédigé par : <%= article.user.user_name %>
              </small>

              <div class="mt-2 d-flex align-items-center justify-content-between">
                <%= link_to public_article_path(article), class: "btn-nxr" do %>
                  <i class="fa-regular fa-newspaper me-1"></i> Lire l’article
                <% end %>
              </div>
            </div>
          </article>
        </div>
      <% end %>
    </div>

    <!-- Pagination (Kaminari) via ta partial partagée -->
    <%= render "shared/pagination", paginated: @articles, anchor: "articles" %>

  <% else %>
    <!-- Empty state -->
    <div class="card-homepage shadow-sm rounded-4 text-center p-5 mx-auto" style="max-width: 640px;">
      <div class="mb-3"><i class="far fa-newspaper fa-3x"></i></div>
      <h3 class="h5 fw-bold mb-2">Aucun article publié pour le moment</h3>
      <p class="mb-0">Revenez bientôt pour découvrir les prochaines nouvelles du club</p>
    </div>
  <% end %>
</section>

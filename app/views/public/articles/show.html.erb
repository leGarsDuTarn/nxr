<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <article class="card shadow-sm rounded-4 overflow-hidden">

        <%# Image d’illustration %>
        <div class="ratio ratio-16x9 bg-dark">
          <% if @article.image.attached? %>
            <%= image_tag @article.image,
                  class: "w-100 h-100 object-fit-cover",
                  alt: @article.title %>
          <% else %>
            <%= image_tag "logo_mcnc_3.png",
                  class: "w-100 h-100 object-fit-contain p-4",
                  alt: @article.title %>
          <% end %>
        </div>

        <%# Contenu article %>
        <div class="card-body p-4 p-md-5">
          <h1 class="card-title fs-2 text-uppercase fw-bold mb-3"><%= @article.title %></h1>

          <% if @article.date.present? %>
            <p class="text-muted small mb-2">
              <i class="far fa-calendar-alt me-1" aria-hidden="true"></i>
              Publié le <%= l(@article.date, format: "%d %B %Y") %>
            </p>
          <% end %>

          <div class="card-text fs-5 mb-4">
            <%= simple_format(@article.content) %>
          </div>

          <small class="text-muted d-block mb-4">
            Rédigé par : <%= @article.user.user_name %>
          </small>

          <div class="d-flex justify-content-between">
            <%= link_to :back, class: "btn-nxr", aria: { label: "Retour à la page précédente" } do %>
              <i class="fas fa-arrow-left" aria-hidden="true"></i> Retour
            <% end %>
          </div>
        </div>
      </article>
    </div>
  </div>
</div>

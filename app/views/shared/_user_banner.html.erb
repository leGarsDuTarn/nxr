<% banner_url = @user.avatar.attached? ? url_for(@user.avatar) : asset_path("avatar_default.jpeg") %>

<section class="profile-user banner-dashboard">
  <div class="container py-5 text-center text-on-surface">
    <div class="d-flex flex-column align-items-center">
      <!-- Avatar en rond au-dessus de la bannière -->
      <div class="avatar-wrapper mb-3">
        <% if @user.avatar.attached? %>
          <%= image_tag @user.avatar, class: "rounded-circle shadow avatar-lg", alt: "#{@user.first_name} #{@user.last_name}" %>
        <% else %>
          <%= image_tag "avatar_default.jpg", class: "rounded-circle shadow avatar-lg", alt: "Avatar par défaut" %>
        <% end %>
      </div>

      <!-- Nom complet -->
      <h1 class="display-5 fw-bold mb-1"><%= @user.first_name %> <%= @user.last_name %></h1>
      <p class="text-tertiary small mb-0">
        <i class="fas fa-hashtag me-1"></i><%= @user.user_name %>
      </p>

      <!-- Date d’inscription -->
      <p class="lead mb-0">
        <i class="far fa-user me-1"></i>
        Membre depuis le <%= l(@user.created_at.to_date, format: "%d %B %Y") %>
      </p>
    </div>
  </div>
</section>

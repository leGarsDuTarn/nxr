
<section class="profile-user banner-dashboard animate-in">
  <div class="container py-5 text-center">
    <h1 class="display-5 fw-bold mb-1"><%= @gallery.title %></h1>
    <p class="lead mb-0"><%= l(@gallery.date, format: :long) %></p>
  </div>
</section>

<div class="container my-5">
    <div class="row g-4">
      <% @gallery.images.each do |image| %>
        <div class="col-12 col-sm-6 col-md-4">
          <div class="card shadow-sm rounded-4 overflow-hidden h-100">
            <%= image_tag(image, class: "img-fluid w-100 h-100 object-fit-cover", alt: "Image de la galerie") %>
          </div>
        </div>
      <% end %>
    </div>
</div>
